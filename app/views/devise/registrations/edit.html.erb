<div class="offset-3 col-6">
<h2 class="mt-4 mb-4 text-center" style="color: $base_blue">Modification de compte</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email,
                required: true,
                autofocus: true,
                label: "Email",
                input_html: { autocomplete: "email" }%>
    <%= f.input :first_name,
                required: true,
                label: "PrÃ©nom",
                input_html: { autocomplete: "first-name" }%>
    <%= f.input :last_name,
                required: true,
                label: "Nom",
                input_html: { autocomplete: "last-name" }%>
    <%= f.input :location,
                required: true,
                label: "Adresse",
                input_html: { autocomplete: "last-name" }%>
    <%= f.input :drinks,
                required: true,
                label: "Ambiance",
                input_html: { autocomplete: "last-name" }%>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>

    <%= f.input :password,
                hint: "Ne rien mettre si vous ne voulez pas le modifier",
                required: false,
                label: "Nouveau mot de passe",
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :password_confirmation,
                required: false,
                label: "Confirmer nouveau mot de passe",
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :current_password,
                hint: "Entrer votre mot de passe pour effectuer les modifications",
                required: true,
                input_html: { autocomplete: "current-password" } %>
  </div>

  <div class="form-group row">
    <label for="inputPicture" class="col-sm-2 col-form-label"></label>
    <div class="col-sm-10">
      <%= f.input :photo %>
      <%= f.input :photo_change, as: :hidden %>
    </div>
  </div>
  <div class="form-actions text-center mt-5">
    <%= f.submit "Yallah !", class: 'btn btn-primary'%>
  </div>
<% end %>

</div>
