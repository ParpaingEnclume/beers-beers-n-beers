<div class="offset-3 col-6">
<h2 class="mt-4 mb-4 text-center" style="color: $base_blue">Se connecter</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: false,
                label: "Mot de passe",
                input_html: { autocomplete: "current-password" } %>
    <%= f.input :remember_me, label: "Rester connectÃ©(e)", as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions text-center mt-5">
    <%= f.submit "J'ai soif !", class: 'btn btn-primary'%>
  </div>
<% end %>

</div>
