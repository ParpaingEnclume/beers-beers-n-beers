<div class="banner" style="background-image: url(https://images.unsplash.com/photo-1542634093-e0198d4d1e46?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2550&q=80)">
  <div class="container" >
    <h3>On se prépare!</h3>
    <h1>Mes apéros</h1>
    <p></p>
  </div>
</div>

<div class="main-container">
  <div class="cards">
    <% @bookings.each do |booking| %>
    <%= link_to apero_path(booking.apero) do %>
      <div class="col-12 card-apero mt-3 mx-5" <% link_to "apero_path(@apero)" %>>
        <!-- mettre ici le code Ruby pour import des images par apéro -->
        <img src="<%= booking.apero.photo %>" />
        <div class="card-apero-infos">
          <h1><%= booking.apero.title %></h1>
          <p><strong>participants prévus (à la louche) : </strong><%= booking.apero.capacity.to_i %></p>
          <p><%= booking.apero.description %></p>
        </div>
      </div>
      <% end %>
    <% end %>
  </div>
  <div
  id="map"
  style="width: 50%;
  height: 100vh;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
</div>
</div>
