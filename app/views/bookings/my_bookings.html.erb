<div class="offset-3 col-6">
  <% @bookings.each do |booking| %>
  <%= link_to apero_path(booking.apero) do %>
    <div class="card-apero mt-3" <% link_to "apero_path(@apero)" %>>
      <!-- mettre ici le code Ruby pour import des images par apéro -->
      <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />
      <div class="card-apero-infos">
        <h1><%= booking.apero.title %></h1>
        <h2>Ambiance :<%= booking.apero.ambiance %></h2>
        <p><strong>participants prévus (à la louche) : </strong><%= booking.apero.capacity %></p>
        <p><%= booking.apero.description %></p>
      </div>
    </div>
    <% end %>
  <% end %>
</div>
